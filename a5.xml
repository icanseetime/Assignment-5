<?xml version="1.0" encoding="UTF-8"?>
<cookbook xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="a5.xsd">
    <cake>
        <name>Pavlova</name>
        <serves>8</serves>
        <time unit="minutes">90</time>
        <temperature type="fahrenheit">200</temperature>
        <oven-type>Fan</oven-type>
        <difficulty>Medium</difficulty>
        <special-remarks>Gluten-free</special-remarks>
        <recipe>
            <ingredient>
                <type>Egg whites</type>
                <quantity type="pieces">4</quantity>
            </ingredient>
            <ingredient>
                <type>Superfine sugar</type>
                <quantity type="grams">200</quantity>
            </ingredient>
            <ingredient>
                <type>Vanilla extract</type>
                <quantity type="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>Cornstarch</type>
                <quantity type="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>White vinegar</type>
                <quantity type="tablespoons">2</quantity>
            </ingredient>
        </recipe>
    </cake>
    <cake>
        <name>Carrot cake</name>
        <serves>10</serves>
        <time unit="minutes">30</time>
        <temperature type="celsius">160</temperature>
        <oven-type>Gas</oven-type>
        <difficulty>Easy</difficulty>
        <recipe>
            <ingredient>
                <type>All-purpose flour</type>
                <quantity type="grams">250</quantity>
            </ingredient>
            <ingredient>
                <type>Baking soda</type>
                <quantity type="teaspoons">2</quantity>
            </ingredient>
            <ingredient>
                <type>Cinnamon</type>
                <quantity type="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>Sunflower oil</type>
                <quantity type="ml">290</quantity>
            </ingredient>
            <ingredient>
                <type>Superfine salt</type>
                <quantity type="teaspoons">0.5</quantity>
                <!-- TODO: specify that decimals are allowed?  -->
            </ingredient>
            <ingredient>
                <type>Sugar</type>
                <quantity type="grams">200</quantity>
            </ingredient>
            <ingredient>
                <type>Vanilla extract</type>
                <quantity type="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>Grated carrots</type>
                <quantity type="cups">3</quantity>
            </ingredient>
            <ingredient>
                <type>Eggs</type>
                <quantity type="pieces">4</quantity>
            </ingredient>
        </recipe>
    </cake>
</cookbook>