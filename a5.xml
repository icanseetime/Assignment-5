<?xml version="1.0" encoding="UTF-8"?>
<cookbook xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="a5-2.xsd">
    <cake>
        <name>Pavlova</name>
        <serves>8</serves>
        <!-- Må få satt attribute på denne i xsd -->
        <time timeInterval="minutes">90</time>
        <temperature degrees="fahrenheit">200</temperature>
        <ovenType>Fan</ovenType>
        <difficulty>Medium</difficulty>
        <specialRemarks>Gluten-free</specialRemarks>
        <recipe>
            <ingredient>
                <type>Egg whites</type>
                <quantity measuringType="pieces">4</quantity>
            </ingredient>
            <ingredient>
                <type>Superfine sugar</type>
                <quantity measuringType="grams">200</quantity>
            </ingredient>
            <ingredient>
                <type>Vanilla extract</type>
                <quantity measuringType="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>Cornstarch</type>
                <quantity measuringType="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>White vinegar</type>
                <quantity measuringType="tablespoons">2</quantity>
            </ingredient>
        </recipe>
    </cake>
    <cake>
        <name>Carrot cake</name>
        <serves>10</serves>
        <time timeInterval="minutes">30</time>
        <temperature degrees="celsius">160</temperature>
        <ovenType>Gas</ovenType>
        <difficulty>Easy</difficulty>
        <recipe>
            <ingredient>
                <type>All-purpose flour</type>
                <quantity measuringType="grams">250</quantity>
            </ingredient>
            <ingredient>
                <type>Baking soda</type>
                <quantity measuringType="teaspoons">2</quantity>
            </ingredient>
            <ingredient>
                <type>Cinnamon</type>
                <quantity measuringType="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>Sunflower oil</type>
                <quantity measuringType="ml">290</quantity>
            </ingredient>
            <ingredient>
                <type>Superfine salt</type>
                <quantity measuringType="teaspoons">0.5</quantity>
            </ingredient>
            <ingredient>
                <type>Sugar</type>
                <quantity measuringType="grams">200</quantity>
            </ingredient>
            <ingredient>
                <type>Vanilla extract</type>
                <quantity measuringType="teaspoons">1</quantity>
            </ingredient>
            <ingredient>
                <type>Grated carrots</type>
                <quantity measuringType="cups">3</quantity>
            </ingredient>
            <ingredient>
                <type>Eggs</type>
                <quantity measuringType="pieces">4</quantity>
            </ingredient>
        </recipe>
    </cake>
</cookbook>